{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="row justify-content-end">
          <div class="col-6">
            <div class="form-group row">
              <div class="col-2">
                  {{ form_label(form.firstname) }}
              </div>
              <div class="col-10">
                  {{ form_widget(form.firstname) }}
              </div>
            </div>
          </div>
          <div class="col-6">
            <div class="form-group row">
              <div class="col-2 offset-1">
                  {{ form_label(form.lastname) }}
              </div>
              <div class="col-9" id="some-custom-id">
                  {{ form_widget(form.lastname) }}
              </div>
            </div>
          </div>
        </div>

        <div class="row justify-content-end">
          <div class="col-6">
            <div class="form-group row">
              <div class="col-2">
                  {{ form_label(form.email) }}
              </div>
              <div class="col-10">
                  {{ form_widget(form.email) }}
              </div>
            </div>
          </div>
          <div class="col-6">
            <div class="form-group row">
              <div class="col-2 offset-1">
                  {{ form_label(form.phone) }}
              </div>
              <div class="col-9" id="some-custom-id">
                  {{ form_widget(form.phone) }}
              </div>
            </div>
          </div>
        </div>

        <div class="row justify-content-end">
          <div class="col-4">
            <div class="form-group row">
              <div class="col-3">
                  {{ form_label(form.address) }}
              </div>
              <div class="col-9">
                  {{ form_widget(form.address) }}
              </div>
            </div>
          </div>
          <div class="col-4">
            <div class="form-group row">
              <div class="col-2">
                  {{ form_label(form.cityContact) }}
              </div>
              <div class="col-10" id="some-custom-id">
                  {{ form_widget(form.cityContact) }}
              </div>
            </div>
          </div>
          <div class="col-4">
            <div class="form-group row">
              <div class="col-6">
                  {{ form_label(form.postalCode) }}
              </div>
              <div class="col-6">
                  {{ form_widget(form.postalCode) }}
              </div>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-1">
            {{ form_label(form.message) }}
          </div>
          <div class="col-11" id="some-custom-id">
            {{ form_widget(form.message) }}
          </div>
        </div>


    <button class="btn btn-success offset-10 col-2 my-4">{{ button_label|default('Envoyer') }}</button>
{{ form_end(form) }}

